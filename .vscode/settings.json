{
    // Coverage Gutters
    "coverage-gutters.coverageReportFileName": "doc/code-coverage/lcov.info",
    "coverage-gutters.showLineCoverage": true,
    "coverage-gutters.showRulerCoverage": true,
    // clang-format
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.formatOnPaste": false
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.formatOnPaste": false
    },
    "[hpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.formatOnPaste": false
    },
    "[h]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.formatOnPaste": false
    },
    // Configuration pour l'extension clang-format dédiée (xaver.clang-format)
    "clang-format.executable": "/usr/bin/clang-format",
    "clang-format.style": "file",
    "clang-format.fallbackStyle": "Google",
    // Configuration pour l'extension C/C++ (alternative si clang-format dédié n'est pas installé)
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.formattingEngine": "clangFormat",
    // Alternative : utiliser ms-vscode.cpptools si xaver.clang-format n'est pas disponible
    // Décommentez les lignes suivantes et changez "xaver.clang-format" en "ms-vscode.cpptools" ci-dessus
    // "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    // Error squiggles
    "C_Cpp.errorSquiggles": "enabled",
    // Remove trailing whitespace
    "files.trimTrailingWhitespace": true,
    // SonarLint
    "sonarlint.disableTelemetry": true,
    "sonarlint.output.showVerboseLogs": true,
    "sonarlint.pathToCompileCommands": "${workspaceFolder}/compile_commands.json",
    // Makefile needed for SonarLint
    "makefile.compileCommandsPath": "${workspaceFolder}/compile_commands.json",
    "makefile.configurations": [
        {
            "name": "MyConfiguration",
            "problemMatchers": [
                "$gcc"
            ],
            "makeArgs": []
        }
    ],
    "files.associations": {
        "random": "cpp",
        "iomanip": "cpp",
        "iostream": "cpp",
        "ostream": "cpp",
        "array": "cpp",
        "bitset": "cpp",
        "string_view": "cpp",
        "initializer_list": "cpp",
        "ranges": "cpp",
        "span": "cpp",
        "regex": "cpp",
        "valarray": "cpp",
        "any": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "chrono": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "codecvt": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "condition_variable": "cpp",
        "csignal": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
